{
  "name": "d2l-image",
  "description": "A Polymer-based web component for images requiring authentication",
  "private": true,
  "scripts": {
    "postinstall": "bower install",
    "test": "npm run test:lint:js && npm run test:lint:wc && npm run test:unit",
    "test:lint:js": "eslint --ext .js,.html . test/",
    "test:lint:wc": "polymer lint -i d2l-image.html",
    "test:unit": "cross-env LAUNCHPAD_BROWSERS=firefox wct",
    "test:unit:local": "cross-env LAUNCHPAD_BROWSERS=firefox wct -p"
  },
  "homepage": "https://github.com/Brightspace/d2l-image#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Brightspace/d2l-image.git"
  },
  "bugs": {
    "url": "https://github.com/Brightspace/d2l-image/issues"
  },
  "keywords": [
    "d2l",
    "image"
  ],
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "devDependencies": {
    "bower": "^1.8.0",
    "cross-env": "^5.1.3",
    "eslint": "^3.17.0",
    "eslint-config-brightspace": "^0.4.0",
    "eslint-plugin-html": "^1.7.0",
    "polymer-cli": "^1.1.0"
  }
}
